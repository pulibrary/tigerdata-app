<div class="form-field project-description">
  <%= render partial: "/new_project_wizard/form_field_label", 
           locals: {field_label: "Project Description", field_sub_label: "Required"} %>
  <div class="input-frame">
    <div class="text-input">
      <div class="horizontal-frame">
        <div class="vertical-frame">
          <textarea class="form-input counted-input" character-limit="1000" type="text" name="request[description]" id="description"
                placeholder="Describe your project"><%= description %></textarea>

          <div class="horizontal-frame error-and-count">
            <div class="input-error">
                <%= description_error %>
            </div>
            <div class="char-limit">
              <div id="description-char-limit" class="char-limit-text current-count">
                <%= description.size %>/1000 characters
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>