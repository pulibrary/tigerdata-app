<div class="form-field data-manager">
  <%= render partial: "/new_project_wizard/form_field_label", 
           locals: {field_label: "Data Manager", field_sub_label: "Required"} %>
  <div class="input-frame">
    <div class="text-input">
      <div class="horizontal-frame">
        <div class="vertical-frame">
          <input class="form-input data_manager" type="text" name="request[data_manager]" id="request_data_manager"
                list="data_managers" placeholder="Select a Data Manager" autocomplete="off" value="<%=data_manager%>"></input>
          <datalist id="data_managers">
            <% @princeton_users.each do |user| %>
                <option value="<%= user[:uid] %>"><%= "(#{user[:uid]}) #{user[:name]}" %></option>
            <% end %>
          </datalist>
          <div class="input-error">
               <%= data_manager_error %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>