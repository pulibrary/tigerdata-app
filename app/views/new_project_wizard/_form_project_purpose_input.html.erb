<div class="form-field project-purpose">
  <%= render partial: "/new_project_wizard/form_field_label",
           locals: {field_label: "Project Purpose", field_sub_label: "Required"} %>
  <div class="input-frame">
    <div class="text-input">
      <div class="horizontal-frame">
        <div class="vertical-frame">
          <select class="form-input counted-input"
                name="request[project_purpose]" id="project_purpose">
                  <option disabled selected>Select Project Purpose</option>
                <% ProjectPurpose.all.each do |purpose| %>
                  <option value="<%= purpose.id %>" <%= "selected" if project_purpose == purpose.id %>><%= purpose.label %></option>
                <% end %>
          </select>
          <div class="horizontal-frame error-and-count">
            <div class="input-error">
                <%= project_purpose_error %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>