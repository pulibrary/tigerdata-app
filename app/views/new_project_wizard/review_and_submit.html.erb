<% content_for :title, "New Project Request" %>
<% content_for :form_title, "Review" %>
<% content_for :form_description, "Take a moment to review your details and make any necessary edits before finalizing." %>

<div class="section">
    <div class="section-title">
      <div class="section-frame">
        Project Information - Basic Details
      </div>  
    </div>
    <%= render partial: "/new_project_wizard/form_project_title_input", locals: {project_title: @request_model.project_title || "", project_title_error: "" } %>
    <%= render partial: "/new_project_wizard/form_project_path_input", locals: {project_folder: @request_model.project_folder || "", project_folder_error: "",
                                                                                parent_folder: @request_model.parent_folder || "", parent_folder_error: ""} %>
    <%= render partial: "/new_project_wizard/form_project_description_input", locals: {description: @request_model.description || "", description_error: "" } %>
<div class="section-line"></div>
<div class="section">
    <div class="section-title">
      <div class="section-frame">
      Storage and Performance
      </div>  
    </div>
    <%= render partial: "/new_project_wizard/form_project_storage", locals: { quota: @request_model.quota || "", quota_error: "", 
                                                                          storage_size: @request_model.storage_size || 0,  storage_size_error: "", 
                                                                          storage_unit: @request_model.storage_unit || "GB",  storage_unit_error: "" } %>
</div>
<div class="section-line"></div>