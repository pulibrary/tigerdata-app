<div class="form-field data-sponsor">
  <%= render partial: "/new_project_wizard/form_field_label", 
           locals: {field_label: "Data Sponsor", field_sub_label: "Required"} %>
  <div class="input-frame">
    <div class="text-input">
      <div class="horizontal-frame">
        <div class="vertical-frame">
          <input class="form-input data_sponsor" type="text" name="request[data_sponsor]" id="request_data_sponsor"
                list="data_sponsors" placeholder="Select a Data Sponsor" autocomplete="off" value="<%=data_sponsor%>"></input>
          <datalist id="data_sponsors">
            <% @princeton_users.each do |user| %>
                <option value="<%= user[:uid] %>" <%= "selected" if user == data_sponsor %> ><%= "(#{user[:uid]}) #{user[:name]}" %></option>
            <% end %>
          </datalist>
          <div class="input-error">
               <%= data_sponsor_error %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>