<%= form.submit "Back", class: "button" %>
<div class="right-frame" >
   <input type="button" popovertarget="save-and-exit" value="Save and exit" class="button"></input>

   <!-- The Next button takes you to the next screen, depending on the current step -->
   <!-- Send the current controller step to plausible.io -->
    <%= form.submit "Next", id: "next-button", class: "button plausible-event-name=#{params['controller'].gsub("/", "_")}" %>
</div>
<div popover="auto" id="save-and-exit" class="save-and-exit pul-popover">
  <div class="modal-content">
     <div class="modal-title-frame"> 
       <div class="model-title">Save Your Progress</div>
       <input type=button popovertarget="save-and-exit" popovertargetaction="hide" class="pul-popover-close"></input>
     </div>
     <div class="modal-body-text">Your project creation request will be saved as draft.</div>
     <div class="modal-title-input">
       <%= render partial: "/new_project_wizard/form_project_title_input", locals: {project_title: @request_model.project_title || "", project_title_error: "", input_id: "project_title_exit", field_sub_label: "(Required)" } %>
     </div>
  </div>
  <div class="button-frame">
    <%= form.submit "Exit without Saving", class: "button" %>
    <%= form.submit "Confirm", class: "button", id: "save-exit-confirm" %>
  </div>
</div>
