<div class="row">
   <div class="col-10">
      <div class="table">
         <table id="<%= table_id %>" >
         <thead>
            <tr class="project heading">
               <th>title</th>
               <th>status</th>
               <th>type</td>
               <th>role</th>
               <th>download</th>
               <th>activity</th>
               <th>quota_usage</th>
            </tr>
         </thead>
         <tbody>
            <%= render :partial => "project_list_view", :collection => projects, :as => :project %>
         </tbody>
         </table>
      </div>
   </div> <!-- col -->
   <div class="col-2">
      <div style="margin-left: 0.5rem;">
         <p style="background-color: rgb(203, 201, 201);">Latest Downloads</p>
         <% current_user.latest_downloads.each do |download| %>
            <div style="border: 1px solid gray;">
               <p style="margin-bottom: 0px;"><b><%= download.request_details["project_title"] %> </b></p>
               <p style="color: lightgray;">Expires in 30 days | 900 MB</p>
            </div>
         <% end %>
      </div>
   </div> <!-- col -->
</div> <!-- row -->
