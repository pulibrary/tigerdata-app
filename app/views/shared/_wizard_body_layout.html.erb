  <body class="wizard-screen">
    <%= render partial: 'shared/banner' %>
    <%= render partial: 'shared/emulator' %>
    <%= render partial: 'shared/header' %>
    <%= render partial: 'shared/alert' %>
    <div class="wizard">
      <%= render partial: 'shared/breadcrumbs' %>
      <div class="heading-frame">
        <div class="heading-text">
          <%= yield :title %>
        </div>
        <div class="deco-line"></div>
      </div>
      <div class="main-frame">
      <%= render partial: '/new_project_wizard/sidebar' %>
      <%= form_with(url: @form_url, model: @request_model,
                    action: :save, method: :put, class: "form-panel") do |form| %>
        <div class="scrollable-frame">
          <div class="form-header">
            <div class="form-title">
              <div class="form-text">
                <%= yield :form_title %>
              </div>
              <div class="form-optional">
                <%= yield :form_optional %>
              </div>
            </div>
            <div class="form-description">
              <%= yield :form_description %>
            </div>
          </div>
          <div class="form-frame">
            <%= yield %>
          </div>
        </div>
        <div class="button-frame">
            <%= render partial: navigation_partial, locals: {form:} %>
        </div>
      <% end %>
      </div>
    </div>

    <script>
      // Make sure user gets a chance to save their changes when clicking on the Dashboard
      // link in the breadcrumps.
      $("ul.breadcrumbs > li > a").on("click", (event) => {
        console.log("dashboard link clicked");
        $("input[value='Save and exit']").click();
        console.log("save and exit button clicked");
        return false;
      });
    </script>

    <div class="welcome-footer"><%= render partial: 'shared/footer' %></div>
  </body>